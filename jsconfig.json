{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "pages/*": ["./pages/*"],
      "components/*": ["./components/*"],
      "page-components/*": ["./page-components/*"],
      "utils/*": ["./utils/*"],
      "layouts/*": ["./components/layouts*"],
      "styles/*": ["./styles/*"],
      "designsystem/*": ["./designsystem/*"],
      "types/*": ["./types/*"],
      "tests/*": ["./tests/*"],
      "services/*": ["./services/*"],
      "contexts/*": ["./contexts/*"],
      "constants/*": ["./constants/*"],
      "global-states/*": ["./global-states/*"]
    }
  }
}
